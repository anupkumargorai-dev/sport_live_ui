<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#EBEEF3"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >


    <RelativeLayout
        android:id="@+id/ad_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ad_bg"
        android:paddingVertical="3dp"
        android:paddingHorizontal="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ad"
            android:layout_centerInParent="true"
            android:fontFamily="@font/arimosemibold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAMOUS"
        android:textColor="#46474B"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/arimosemibold"
        app:layout_constraintTop_toTopOf="@id/ad_tv"
        app:layout_constraintStart_toEndOf="@+id/ad_tv"
        app:layout_constraintBottom_toBottomOf="@+id/ad_tv"/>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arimosemibold"
        android:textSize="12sp"
        android:textColor="#6C6D6F"
        android:layout_marginTop="5dp"
        android:lineHeight="18dp"
        android:text="India's No 1 Online ID provider Cricket,Teenpati. All Sports Available Whatsapp now +445667890987"
        app:layout_constraintTop_toBottomOf="@+id/ad_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ad_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ad_poster_2"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/contact_us_btn_bg"
        app:layout_constraintTop_toBottomOf="@+id/ad_image">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:layout_centerInParent="true"
            android:fontFamily="@font/arimosemibold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingVertical="5dp"/>


    </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>